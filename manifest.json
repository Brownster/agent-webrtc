{
  "manifest_version": 3,
  "name": "WebRTC Stats Exporter Pro (Auto)",
  "version": "2.0.1",
  "description": "Automatically captures WebRTC stats from specified platforms and pushes them to a Prometheus Pushgateway.",
  "permissions": [
    "storage",
    "scripting",
    "tabs",
    "activeTab",
    "alarms"
  ],
  "host_permissions": [
    "*://*.teams.microsoft.com/*",
    "*://meet.google.com/*",
    "*://*.awsapps.com/connect/ccp*",
    "*://*.my.connect.aws/*",
    "*://*.pure.cloud/*",
    "http://localhost/*",
    "https://localhost/*",
    "http://127.0.0.1/*",
    "https://127.0.0.1/*",
    "http://*.local/*",
    "https://*.local/*",
    "http://*:9090/*",
    "http://*:9091/*",
    "https://*:9090/*",
    "https://*:9091/*",
    "http://*:8080/*",
    "https://*:8080/*",
    "http://*:3000/*",
    "http://*:5480/*",
    "https://*:3000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "override.js", 
        "shared/config.js", 
        "shared/domains.js", 
        "shared/storage.js",
        "shared/storage-circuit-breaker.js",
        "shared/lifecycle-manager.js",
        "background/stats-formatter.js", 
        "background/pushgateway-client.js", 
        "background/network-circuit-breaker.js",
        "background/options-manager.js", 
        "background/connection-tracker.js", 
        "background/lifecycle-manager.js", 
        "background/tab-monitor.js", 
        "background/message-handler.js",
        "assets/pako.min.js"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.teams.microsoft.com/*",
        "*://teams.microsoft.com/*",
        "*://meet.google.com/*",
        "*://*.meet.google.com/*",
        "*://*.awsapps.com/*",
        "*://*.my.connect.aws/*",
        "*://*.mypurecloud.com/*",
        "*://*.genesys.com/*",
        "*://*.mypurecloud.com.au/*",
        "*://*.mypurecloud.ie/*",
        "*://*.mypurecloud.de/*",
        "*://*.mypurecloud.jp/*",
        "*://*.pure.cloud/*"
      ],
      "js": ["content-script.js"],
      "run_at": "document_start"
    }
  ]
}
